for i in range (10): 
    result = result + 1 
print(result) 

#General Form of Accumulator 
#accumulator = start_value
#for in in list: 
    #accumulator = accumulator <operation>

def remove_vowels(string): 
    vowels = "aeiou"
    vowels += vowels.upper()
    result = ""
    for ch in string: 
        result = result + ch
    return result
def main(): 
    mystring = "hello world"
    mystring = remove_vowels(mystring)
    print(mystring)
main()